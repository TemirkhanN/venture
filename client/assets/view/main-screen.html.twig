{% extends "main-template.html.twig" %}

{% block header %}
    <style>
        td {
            border: 1px solid gray;
            padding: 5px;
            vertical-align: baseline;
        }
    </style>
{% endblock %}
{% block content %}
    <h1>{{ player.name }}</h1>
    <table>
        <tbody>
        <tr>
            <td>
                {{ include('character/character-stats.html.twig', {character: player}, with_context=false) }}
            </td>
            <td>
                {{ include('player/inventory.html.twig', {player: player}, with_context=false) }}
            </td>
            <td>
                {{ include('player/actions.html.twig', {player: player}, with_context=false) }}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
