{% extends "main-template.html.twig" %}

{% block header %}
<style>
    td {
        border:1px solid gray;
        padding: 5px;
        vertical-align: baseline;
    }
</style>
<script>
    function equipItem(inventorySlotPosition) {
        sendPost({action: 'EquipItem', fromSlot: inventorySlotPosition});
    }
</script>
{% endblock %}
{% block content %}
    <h1>{{ player.name }}</h1>
    <table>
        <tr>
            <td>
                {{ include('character-stats.html.twig', {character: player}, with_context=false) }}
            </td>
            <td>
                {{ include('player/inventory.html.twig', {player: player}, with_context=false) }}
            </td>
        </tr>
    </table>
{% endblock %}
